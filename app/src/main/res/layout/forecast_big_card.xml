<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/colorPrimary">

<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="3"
    android:columnCount="4"
    android:layout_marginLeft="15dp"
    android:layout_marginStart="15dp"
    android:alignmentMode="alignMargins">
    <TextView
        android:id="@+id/txtDayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_row="0"
        android:layout_columnSpan="3"
        android:layout_column="0"/>


    <TextView
        android:id="@+id/txtCondition"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostly Sunny"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp" />
    <ImageView
        android:id="@+id/imgWeatherIcon"
        android:layout_height="72dp"
        android:layout_width="72dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/weather_clear"
        android:scaleType="fitXY"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="left"
        android:layout_row="1"
        android:layout_column="0"/>


    <TextView
        android:id="@+id/txtCurrent"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90"
        android:textColor="@android:color/white"
        android:layout_gravity="top"
        android:textSize="64sp" />
    <TextView
        android:id="@+id/txtCurrentDegree"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="°F"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_gravity="top" />
    <TextView
        android:id="@+id/txtHigh"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_row="1"
        android:layout_gravity="top"
        android:layout_column="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90°F"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/txtLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:text="75°F"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_gravity="top"
        android:textColor="@android:color/white"/>


</GridLayout>
    <GridLayout
        android:id="@+id/llMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/sunset"
            android:scaleType="fitXY"
            android:id="@+id/imgSunset"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="5dp" />
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/weather_humidity_bw"
            android:scaleType="fitXY"
            android:id="@+id/imgHumidity"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="5dp" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/weather_wind_bw"
            android:scaleType="fitXY"
            android:id="@+id/imgWindSpeed"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="5dp" />

        <TextView
            android:text="100%"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtHumidity"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="5dp" />

        <ImageView
            android:id="@+id/imgRightArrow"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp" />

        <TextView
            android:text="10 mph"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtWindSpeed"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="5dp" />

        <TextView
            android:text="12:59 am"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSunsetTime"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="5dp" />
    </GridLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"/>

</RelativeLayout>